{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,         
    "outDir": "./build",                              
    "removeComments": true,                 
    "esModuleInterop": true,       
    "strict": true,
    "skipLibCheck": true 
  },
  "include": [
    "src/**/*.ts"   /* masukin setiap file ts ke prod ;) */
    ],
  "exclude": [
    "node_modules"  /* menolak folder di prod ;) */
    ]
}
